{
  "name": "sample-graphql-product-server",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "git@github.com:swashcap/sample-graphql-product-server.git",
  "author": "Cory Reed",
  "license": "Apache-2.0",
  "dependencies": {
    "apollo-server": "^2.25.3",
    "faker": "^4.1.0",
    "graphql": "^14.5.3",
    "hard-rejection": "^2.1.0",
    "prettier": "^1.18.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.18",
    "gql2ts": "^1.10.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.4",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "build": "run-s build:gql build:ts build:data",
    "build:data": "mkdir -p tmp-data && node scripts/generate-data.js > tmp-data/data.json",
    "build:gql": "mkdir -p tmp-types && gql2ts src/schema.gql > tmp-types/gql.d.ts",
    "build:ts": "tsc",
    "clean": "./scripts/clean.sh",
    "format": "prettier --write '*.js' 'scripts/**/*.ts' 'src/**/*{.gql,ts}'",
    "start": "node src/index.js",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{gql,js,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
